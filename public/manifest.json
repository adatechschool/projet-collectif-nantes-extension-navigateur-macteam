{
  "manifest_version": 3,
  "name": "Help IA",
  "description": "Extension AI Assistance",
  "version": "1.0",
  "content_scripts": [
    {
      "js": ["script.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": ["contextMenus", "activeTab", "scripting", "storage"],
  "host_permissions": ["*://*/*", "https://chatgpt.com/*"],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {"16":"Icons/icon16.png",
            "32":"Icons/icon32.png",
            "128":"Icons/icon128.png"

  }
}
